{
    "name": "gayatri",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This is an extension to collect various URL for `savitri`.",
    "browser_action": {
        "default_title": "",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/search?*",
                "*://*.google.co.jp/search?*"
            ],
            "js": [
                "src/index.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "permissions": [
        "*://*.google.com/search?*",
        "downloads",
        "storage"
    ]
}
